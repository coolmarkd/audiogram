# Suppress audit warnings
audit-level=moderate
fund=false
update-notifier=false

# Performance optimizations
prefer-offline=true
cache-min=86400

# Security (optional - be careful with this)
audit=false

# Package manager settings
package-lock=true
save-exact=false

# Canvas-specific settings
canvas_binary_host_mirror=https://registry.npmjs.org/@mapbox/node-pre-gyp-github-releases/download/
